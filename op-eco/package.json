  "author": "Eco Engineering <eng@eco.com>",
  "main": "index.js",
  "files": [
    "tools/**.js",
    "contracts/**.sol",
    "build/contracts/**.json"
  ],
  "scripts": {
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "format": "concurrently 'npm:format:*'",
